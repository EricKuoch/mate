    <div class="header">
    <%= render 'shared/burger' %>
    </div>
<div class="container">
  <div class="profile-header">
    <div class="avatar-nav">
    <%= cl_image_tag @user.avatar.key%>
    </div>
    <div class="profile-header-number">
      <ul>
        <li><%= @user.events.size %><br> <p>created</p> </li>
        <li><%= @user.attendees.size %> <br> <p>joined</p>  </li>
        <li>28 <br> <p>mates</p> </li>
      </ul>
    </div>
  </div>

  <div class="profile-description">
    <h5> @<strong><%= @user.nickname.capitalize %></strong> <div class="popup"> (✭<%= @average_rating.round(2)%>)
     <span class="popuptext" id="myPopup">Your events ratings</span>
    </div> </h5>
    <p> <%= @user.description %></p>
  </div>

  <div class="title-profile">
    <div class="my-events">
      <h5>My events <i class="fas fa-child"></i></h5>
    </div>
    <div class="handshake">
      <h5>Joined <i class="fas fa-handshake"></i></h5>
    </div>
  </div>
  <!-- LIST OF EVENTS  -->
  <div class="myBtn">
    <% @user.events.each do |event| %>
      <div class="card-product ">
        <div class="card-product-infos">
          <span class="event-title"><%= event.title %> </span>  <br>
          <% event.attendees.each do |attendee| %>
            <%=  attendee.rating %>
          <% end %>
          <p><%= event.start_time.strftime("%d-%m-%Y") %> </p>
          <div id="myModal" class="modal">
            <%= event.title %>
            <% event.attendees.each do |attendee| %>
              <p> <%= attendee.user.nickname %> <span><%= "⭐" * attendee.rating + "☆"* (5-attendee.rating)%></span>(<%= attendee.rating %>) </p>
              <p> <%= attendee.review %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>


  <div class="events-created">
  </div>

  <h2>Participations <i class="fas fa-handshake"></i></h2>
  <% @user.attendees.each do |attendee| %>
    <strong><%= attendee.event.title %></strong>
    created by <%= attendee.event.user.nickname %>
  <% end %>

  <h6>Les reviews que mes mates m'ont laissés:</h6>
  <% @user.attendees.each do |attendee| %>
    <li>
      <%= attendee.creator_review %>
    </li>
  <% end %>
</div>
