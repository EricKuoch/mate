<div class="container">
  <% if @event_image.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @event_image.key %>')">
      <%= cl_image_tag @event_image.key, class: "show-banner-img"%>
    </div>
  <% end %>

  <div>
    <p><%= @event.number_of_participants %></p>
    <%= simple_form_for [@event] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <p><%= @event.start_time.strftime("%e %b %Y %H:00")%></p>
    <p>HOUR</p>
    <p><%= @event.sport.name %></p>
    <p>Adresse event</p>
  </div>

  <div>
    <h2>About</h2>
    <p>description</p>
  </div>

  <div>
    <h2>Location</h2>
    <p>map</p>
  </div>

  <div>
    <%= link_to "join", "#" %>
  </div>




  <div class="row">

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
    <% if Attendee.find_by(event_id: @event, user_id: current_user ) || @event.attendees.count == @event.number_of_participants %>
      <%= @event.attendees.count + 1 %>/<%= @event.number_of_participants %> participants
    <% else %>
      <%= simple_form_for [@event, Attendee.new()] do |f| %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    <% end %>

    <% @event.attendees.each do |attendee| %>
      <%= attendee.user.nickname %>
    <% end %>
  </div>
</div>

