   <div class="container-onglets">
      <div class="onglets active-onglet" data-anime="1">Your past events</div>
      <div class="onglets"data-anime="2">Incoming events </div>
    </div>

  <div class="contenu activeContenu" data-anime="1">
    <h3>Events you created</h3>
    <% @past_events_create.each do |event| %>
      <div class="card-product">
        <div class="date">
          <h6><%= event.start_time.strftime("%d-%m-%Y") %></h6>
        </div>
        <%= event.sport.name %> : <%= event.title %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong<%= event.id %>">
          Give a feedback to the attendees
        </button>
      </div>
    <% end %>

    <!-- Modal -->
    <% @past_events_create.each do |event| %>
      <div class="modal fade" id="exampleModalLong<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle<%= event.id %>" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle<%= event.id %> ">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <% event.attendees.each do |attendee| %>
                  <% if(@user != attendee.user) %>
                   <p><%= attendee.user.nickname %> :</p>
                      <%= simple_form_for attendee do |f| %>
                      <%= f.input :creator_review, label:"How was #{attendee.user.nickname} ?", class: "input" %>
                        <%= f.input :creator_rating, label:"Give #{attendee.user.nickname} a rating !", collection: 1..5 %>
                        <%= f.button :submit, 'Let him know', class: 'btn btn-primary'%>
                      <% end %>
                  <% end %>
                <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <h3>Events you joined</h3>
    <% @past_events_join.each do |event| %>
      <div class="card-product">
        <h4><%= event.start_time.strftime("%d-%m-%Y") %></h4>
        <%= event.sport.name %> : <%= event.title %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong<%= event.id %>">
          Give a feedback to the event
        </button>
      </div>
    <% end %>


    <% @past_events_join.each do |event| %>
      <div class="modal fade" id="exampleModalLong<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle<%= event.id %>" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle<%= event.id %> ">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <% event.attendees.each do |attendee| %>
                <%= simple_form_for attendee do |f| %>
                  <%= f.input :review, label: "How was the event?" %>
                  <%= f.input :rating, label: "Give a rating !" %>
                  <%= f.button :submit, 'Leave a feedback', class: 'btn btn-primary'%>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

